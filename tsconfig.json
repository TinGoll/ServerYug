{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "lib": ["ES6"],
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 3,
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}